{
  "name": "wagoo-v1",
  "version": "1.0.18",
  "main": "dist-electron/main.js",
  "homepage": "https://wagoo.ai",
  "scripts": {
    "clean": "rimraf dist dist-electron",
    "dev": "cross-env NODE_ENV=development npm run clean && concurrently \"tsc -w -p tsconfig.electron.json\" \"vite\" \"wait-on http://localhost:54321 && electron .\"",
    "build": "cross-env NODE_ENV=production rimraf dist dist-electron && vite build && tsc -p tsconfig.electron.json && electron-builder",
    "build:release": "cross-env NODE_ENV=production rimraf dist dist-electron && vite build && tsc -p tsconfig.electron.json && electron-builder --publish never",
    "build:mac": "npm run build:release -- --mac",
    "build:win": "npm run build:release -- --win",
    "build:linux": "npm run build:release -- --linux",
    "package:all": "npm run build:mac && npm run build:win && npm run build:linux",
    "generate:update:yml": "node scripts/generate-update-yml.js",
    "generate:all-update-files": "node scripts/generate-all-update-files.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.chunginlee.wagoo",
    "productName": "Wagoo",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "electron/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "asar": true,
    "compression": "normal",
    "generateUpdatesFilesForAllChannels": true,
    "protocols": [
      {
        "name": "wagoo-protocol",
        "schemes": ["wagoo"]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "Wagoo-${arch}.${ext}",
      "icon": "assets/icons/mac/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": {
        "teamId": "MJQ4MNNJUR"
      },
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Wagoo needs access to your microphone to transcribe voice input for AI conversations."
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icons/win/icon.ico",
      "artifactName": "${productName}-Windows-${version}.${ext}",
      "protocols": {
        "name": "wagoo-protocol",
        "schemes": [
          "wagoo"
        ]
      },
      "signAndEditExecutable": true,
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false,
      "publisherName": "Wagoo",
      "requestedExecutionLevel": "asInvoker",
      "legalTrademarks": "Wagoo"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false,
      "publisherName": "Wagoo",
      "menuCategory": "Wagoo",
      "shortcutName": "Wagoo",
      "uninstallDisplayName": "Wagoo"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/png/icon-256x256.png",
      "artifactName": "${productName}-Linux-${version}.${ext}",
      "protocols": {
        "name": "wagoo-protocol",
        "schemes": [
          "wagoo"
        ]
      },
      "category": "Utility"
    },
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "asarUnpack": [
      "node_modules/node-llama-cpp/**"
    ]
  },
  "keywords": [],
  "author": "Wagoo",
  "license": "ISC",
  "description": "An invisible desktop application that serves as your general-purpose AI assistant overlay.",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "@electron/notarize": "^2.3.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@google/genai": "^1.5.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.64.0",
    "anthropic": "^0.0.0",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "diff": "^7.0.0",
    "dotenv": "^16.4.7",
    "electron-log": "^5.2.4",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.1.7",
    "form-data": "^4.0.1",
    "jimp": "^1.6.0",
    "lucide-react": "^0.364.0",
    "node-llama-cpp": "^3.10.0",
    "openai": "^4.32.1",
    "pngjs": "^7.0.0",
    "react": "^18.2.0",
    "react-code-blocks": "^0.1.6",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.28.1",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.0",
    "screenshot-desktop": "^1.15.0",
    "tailwind-merge": "^2.5.5",
    "uuid": "^11.1.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@electron/typescript-definitions": "^8.14.0",
    "@types/color": "^4.2.0",
    "@types/diff": "^6.0.0",
    "@types/electron-store": "^1.3.1",
    "@types/node": "^20.19.0",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/screenshot-desktop": "^1.12.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^36.5.0",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.49",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
